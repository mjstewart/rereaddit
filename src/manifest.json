{
    "manifest_version": 2,
    "name": "rereadit",
    "description": "Track and manage unread reddit comments",
    "version": "1.0",
    "options_page": "options.html",
    "background": {
      "scripts": ["background.js"],
      "persistant": false
    },
    "page_action": {
      // "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title": "Track and manage unread reddit comments"
    },
    "permissions": [
      "activeTab",
      "tabs",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.reddit.com/r/*/comments/*"],
        "js": ["comments.js"]
      }
      // {
      //   "matches": ["https://www.reddit.com/r/*"],
      //   "exclude_matches": ["https://www.reddit.com/r/*/comments/*"],
      //   // "css": ["styles.css"],
      //   "js": ["subreddit.js"]
      // }
    ]
  }